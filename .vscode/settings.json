{
    "php.suggest.basic": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.formatOnPaste": true,
    "editor.fontSize": 17,
    "editor.fontFamily": "Cascadia Code, Consolas",
    "terminal.integrated.fontFamily": "Consolas,Monaco,monospace",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.associations": {
        "*.blade.php": "blade"
    },
    "git.autofetch": true,
    "php.format.codeStyle": "Laravel",
    "php.hover.fullname": true,
    "php.format.rules.openBraceOnNewLineForBlocks": false,
    "php.format.rules.alignConsecutiveAssignments": true,
    "php.format.rules.alignConstants": true,
    //Theme & Icon Setup
    "workbench.colorTheme": "Dark Material Dracula Soft",
    "workbench.iconTheme": "material-icon-theme",
    "files.watcherExclude": {
        "**/build/**": true,
        "**/dist/**": true,
        "**/vendor/**": true,
        "**/node_modules/**": true
    },
    "window.zoomLevel": 0.9,
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
}