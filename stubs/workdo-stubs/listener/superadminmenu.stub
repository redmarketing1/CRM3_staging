<?php

namespace Modules\$STUDLY_NAME$\Listeners;
use App\Events\SuperAdminMenuEvent;

class SuperAdminMenuListener
{
    /**
     * Handle the event.
     */
    public function handle(SuperAdminMenuEvent $event): void
    {
        $module = '$STUDLY_NAME$';
        $menu = $event->menu;
        $menu->add([
            'title' => '$STUDLY_NAME$',
            'icon' => 'home',
            'name' => '$LOWER_NAME$',
            'parent' => null,
            'order' => 2,
            'ignore_if' => [],
            'depend_on' => [],
            'route' => 'home',
            'module' => $module,
            'permission' => 'manage-dashboard'
        ]);
    }
}
